@{
    ViewBag.Title = "Home Page";
}
@model Lernplat.Models.GewichtungsModel

<div class="navbar navbar-inverse navbar-fixed-top" style="background-color: white; border-bottom-color: white;">
    <div class="container">
        <table class="table">
            <tr>
                <td>
                    <img src="http://www.mosbach.dhbw.de/fileadmin/user/public/studienangebote/in/DHBW_d_MOS_46mm_4c_ohne_schutzzone.jpg" width="81" height="39">
                </td>
                <td class="text-right">
                    <button data-toggle="collapse" data-target="#demo" class="btn btn-danger">
                        Fächer
                        <span class="glyphicon glyphicon-arrow-down"></span>
                    </button>
                </td>
            </tr>
        </table>
        @using (Html.BeginForm())
            {
            <div class="container" style="margin-top:5px">
                <div class="collapse" id="demo">

                    <table class="table">
                        @for (int i = 0; i < Lernplat.Controllers.HomeController.listenObj.grupiertFach.Count(); i++)
                {
                            <tr>
                                <td class="text-left">
                                    @Lernplat.Controllers.HomeController.listenObj.grupiertFach[i].Name.Split('(').First()
                                </td>
                                <td></td>
                                <td class="text-right">
                                    @Html.TextBoxFor(o => Model.Gewichtung[i], new
                               {
                                   min = "1",
                                   max = Lernplat.Controllers.HomeController.listenObj.grupiertFach.Count(),
                                   step = "1",
                                   value = Lernplat.Controllers.HomeController.listenObj.grupiertFach[i].Gewichtung,
                                   onkeydown = "return false",
                                   type = "number"
                               })
                                </td>

                            </tr>
                        }
                        <tr>
                            <td></td>
                            <td></td>
                            <td class="text-right">
                                <button class="btn btn-sm btn-danger" type="submit"><span class="glyphicon glyphicon-refresh" aria-hidden="true"></span></button>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        }
    </div>

</div>

<div style="margin-top: 30px">
    <table class="table table-hover table-striped table-condensed table-dynamic" style="margin-top: 20px">
        <tr>
            <td class="text-center"><b>Tag</b></td>
            <td class="text-center"><b>Zeit in der Uni</b></td>
            <td class="text-center"><b>Lerneinheiten Zuhause</b></td>
            <td class="text-center"><b>Empfohlene Lernfächer</b></td>
        </tr>
        @for (int i = 1; i < Lernplat.Controllers.HomeController.listenObj.zeitverbracht.Count; i++)
        {
            <tr>
                <td class="text-center">@Lernplat.Controllers.HomeController.listenObj.zeitverbracht[i].Tag.ToString("dd.MM.yyyy")</td>
                <td class="text-center">@Lernplat.Controllers.HomeController.listenObj.zeitverbracht[i].Verbrauch.ToString("hh\\:mm")</td>
                <td class="text-center">@Lernplat.Controllers.HomeController.listenObj.zeitverbracht[i].Lerneinheiten</td>
                <td class="text-center">
                    @if (Lernplat.Controllers.HomeController.SafeToRefresh)
                    {
                            <b>@Lernplat.Controllers.HomeController.listenObj.zeitverbracht[i].LernFacher</b>
                            //Html.ActionLink(Lernplat.Controllers.HomeController.listenObj.zeitverbracht[i].LernFacher, "PDF", "Home",
                            //                new { FileName = Lernplat.Controllers.HomeController.listenObj.zeitverbracht[i].LernFacher },
                    }
                </td>


            </tr>
        }
    </table>
</div>